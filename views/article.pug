extends layout

block content
  h1= article.title
  h5 Written By  #{author}
  br
  p= article.body
  hr
  if user
    if user.id == article.author
      a.btn.btn-success(href='/article/edit/'+article._id) Edit
      span &ensp;&ensp;
      a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete
